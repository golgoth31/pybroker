{
    "template": "centreon",
    "settings": {
        "index": {
            "refresh_interval": "5s"
        }
    },
    "mappings": {
        "servce_status": {
            "dynamic_templates": [{
                "strings": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "type": "keyword"
                    }
                }
            }],
            "_all": {
                "enabled": false
            },
            "_source": {
                "enabled": true
            },
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "format": "epoch_second"
                },
                "host_id": {
                    "type": "integer",
                    "doc_values": true
                },
                "service_id": {
                    "type": "integer",
                    "doc_values": true
                },
                "host_name": {
                    "type": "keyword"
                },
                "service_description": {
                    "type": "keyword"
                },
                "current_state": {
                    "type": "integer"
                },
                "current_state_literal": {
                    "type": "keyword"
                }
            }
        },
        "host_status": {
            "dynamic_templates": [{
                "strings": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "type": "keyword"
                    }
                }
            }],
            "_all": {
                "enabled": false
            },
            "_source": {
                "enabled": true
            },
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "format": "epoch_second"
                },
                "host_id": {
                    "type": "integer"
                },
                "host_name": {
                    "type": "keyword"
                },
                "current_state": {
                    "type": "integer"
                },
                "current_state_literal": {
                    "type": "keyword"
                }
            }
        },
        "metrics": {
            "dynamic_templates": [{
                "strings": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "type": "keyword"
                    }
                }
            }],
            "_all": {
                "enabled": false
            },
            "_source": {
                "enabled": true
            },
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "format": "epoch_second"
                },
                "output": {
                    "type": "text",
                    "index": false
                },
                "host_id": {
                    "type": "integer"
                },
                "service_id": {
                    "type": "integer"
                },
                "service_description": {
                    "type": "keyword"
                },
                "metric_name": {
                    "type": "keyword"
                },
                "unit": {
                    "type": "keyword"
                },
                "max": {
                    "type": "float",
                    "index": false
                },
                "min": {
                    "type": "float",
                    "index": false
                },
                "value": {
                    "type": "float"
                },
                "state": {
                    "type": "integer"
                },
                "check_interval": {
                    "type": "float"
                },
                "warn": {
                    "type": "keyword",
                    "index": false
                },
                "crit": {
                    "type": "keyword",
                    "index": false
                }
            }
        }
    }
}
